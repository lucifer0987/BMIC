<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gaurav.bmic.result4050">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#3b0489" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:src="@drawable/image"
        android:id="@+id/image"
        android:layout_below="@id/toolbar"
        android:layout_margin="15dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:src="@drawable/camera"
        android:scaleType="centerCrop"
        android:layout_alignEnd="@id/image"
        android:layout_alignBottom="@id/image"
        android:background="@drawable/eb2"
        android:id="@+id/camera"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/image"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv1"
            android:text="Gaurav Kumar"
            android:textSize="28sp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:textColor="#FFFFFF"/>

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv2"
                android:text="M"
                android:textSize="26sp"
                android:textColor="#FFFFFF"/>

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:layout_toEndOf="@id/tv2"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv3"
                android:text="19"
                android:textSize="26sp"
                android:layout_toEndOf="@id/tv2"
                android:layout_marginStart="26dp"
                android:textColor="#FFFFFF"/>


        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv6"
        android:text="BMI"
        android:layout_below="@id/image"
        android:textSize="26sp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF" />


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:layout_below="@id/tv6"
        android:layout_alignStart="@id/tv6"
        android:layout_alignEnd="@id/tv6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23.2"
        android:layout_below="@id/tv6"
        android:textSize="36sp"
        android:layout_marginStart="50dp"
        android:id="@+id/tv7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv8"
        android:text="Ideal Weight"
        android:layout_toEndOf="@id/tv6"
        android:layout_below="@+id/image"
        android:textSize="26sp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_below="@id/tv8"
        android:layout_alignStart="@id/tv8"
        android:layout_alignEnd="@id/tv8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23.2 kg"
        android:layout_below="@id/tv8"
        android:layout_alignStart="@id/tv8"
        android:textSize="36sp"
        android:textColor="#11ff00"
        android:layout_marginStart="10dp"
        android:id="@+id/tv9"/>


</RelativeLayout>
